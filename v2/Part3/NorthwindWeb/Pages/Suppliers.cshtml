@page
@model NorthwindWeb.Pages.SuppliersModel

@{
    Layout = "_Layout";
}

<div class="row">
    <h1 class="display-2">Suppliers</h1>
    <table class="table">
        <thead class="thead-dark">
        <tr>
            <th scope="col">#</th>
            <th scope="col">Company Name</th>
        </tr>
        </thead>
        <tbody>
        @{ var i = 1; }
        @foreach ( string name in Model.Suppliers )
        {
            <tr>
                <th scope="row">@i</th>
                <td>@name</td>
            </tr>
            i++;
        }
        </tbody>
    </table>
</div>